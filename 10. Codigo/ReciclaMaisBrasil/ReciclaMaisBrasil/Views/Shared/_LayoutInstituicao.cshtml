<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Recicla Mais Brasil - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="margin:0px;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" style="width:180px; height:80px; padding:7px 15px">
                    <img src="~/Content/Images/logo-nav-top.svg" alt="Brand" style="width:150px;height:67.69px;">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav fonte-texto-menu">
                    <li>@Html.ActionLink("Login", "Index", "Home")</li>
                    <li>@Html.ActionLink("Cadastro", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Como Funciona ?", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class=" body-content-fix">

        @RenderBody()
        
        <footer>
            <div class="row">
              <div class="row row-centered margem">
                ©2017 - @DateTime.Now.Year - All rigths reserved to CAMNSystem
              </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
