@model Model.Models.SolicitacaoColeta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
    var tp = ViewBag.TipoReciclavel;
    var tp2 = ViewBag.TipoReciclavel;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal borda-arredondada" style="text-align:left !important; background-color:#006633; color:white;">
        <div class="form-horizontal margem-conteudo-solicitacao">
            <div class="row row-centered">
                <h3>Solicitacão de Coleta</h3>
            </div>
            


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Reciclavel, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Reciclavel, (SelectList) ViewBag.TipoReciclavel, htmlAttributes : new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Reciclavel, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DescReciclavel, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.DescReciclavel, htmlAttributes : new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DescReciclavel, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FotoReciclavel, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input name="Image" type="file" />
                        @Html.ValidationMessageFor(model => model.FotoReciclavel, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.IdInstituicao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IdInstituicao, (SelectList)ViewBag.Instituicao, htmlAttributes: new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.IdInstituicao, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row-centered">
                    
                    <div class="col-md-4 col-centered">
                        @Html.Label("Entregar no Local")
                        @Html.RadioButtonFor(model => model.TpSolicitacao, "A", false)
                        @Html.ValidationMessageFor(model => model.TpSolicitacao, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4 col-centered">
                        @Html.Label("Coleta no Domícilio")
                        @Html.RadioButtonFor(model => model.TpSolicitacao, "B", false)
                        @Html.ValidationMessageFor(model => model.TpSolicitacao, "", new { @class = "tex-danger" })
                    </div>
                </div>

            </div>


            <div class="form-group row-centered">
                <div class="col">
                    <input type="submit" value="Concluir Solicitação" class="btn btn-light" />
                </div>
            </div>


        </div>
    </div>
}

